<% @title = 'Log in' %>
<% @back_link = root_path %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field group">
    <%= f.email_field :email, class: text_input_class, placeholder: ' ', autofocus: true, autocomplete: "email" %>
    <%= f.label :email, class: label_class %><br />
  </div>

  <div class="field group">
    <%= f.password_field :password, class: text_input_class, placeholder: ' ', autocomplete: "current-password" %>
    <%= f.label :password, class: label_class %><br />
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

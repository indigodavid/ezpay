<% @title = 'Change your password' %>
<% @back_link = root_path %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field group">
    <%= f.password_field :password, class: text_input_class, placeholder: ' ', autofocus: true, autocomplete: "new-password" %>
    <%= f.label :password, "New password", class: label_class %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
  </div>

  <div class="field group">
    <%= f.password_field :password_confirmation, class: text_input_class, placeholder: ' ', autocomplete: "new-password" %>
    <%= f.label :password_confirmation, "Confirm new password", class: label_class %><br />
  </div>

  <div class="actions">
    <%= f.submit "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

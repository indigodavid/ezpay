<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto min-w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    
    <%= render @category %>

    <div class="grid w-full place-items-center">
      <%= link_to new_category_payment_path(@category), class: 'p-2 bg-emerald rounded text-center text-white' do %>
        <i class="fa-solid fa-plus"></i><span class="ml-2">Create Payment</span>
      <% end %>
    </div>

    <%= render @payments %>
  </div>
</div>
